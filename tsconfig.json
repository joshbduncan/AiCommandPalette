{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES3",
    "ignoreDeprecations": "5.0",
    "outFile": "build/bundle.jsx",
    "allowJs": true,
    "noLib": true,
    // "typeRoots": ["./types"],
    "types": ["types-for-adobe/Illustrator/2022", "./types"],
    // "types": ["./types/"],
    "removeComments": false,
    "sourceMap": false,
    "alwaysStrict": false
    // "skipLibCheck": true
  },
  "files": [
    "./src/header.js",

    "./polyfills/Array.ts",
    "./polyfills/Number.ts",
    "./polyfills/Object.ts",
    "./polyfills/String.ts",

    "src/Logger.ts",
    "src/helpers.js",
    "src/io.ts",

    "src/data/built_strings.ts",
    "src/data/built_commands.ts",

    "src/config.js",
    "src/user/preferences.ts",
    "src/user/history.ts",
    "src/user/actions.js",

    "src/palettes/filter.js",
    "src/palettes/fuzzy.js",
    "src/palettes/nofuzz.js",
    "src/palettes/commandPalette.js",
    "src/palettes/customCommands.js",
    "src/palettes/pickerBuilder.js",
    "src/palettes/workflowBuilder.js",
    "src/palettes/startupBuilder.js",

    "src/commands/processing.js",
    "src/commands/internal.js",
    "src/commands/workflows.js",

    "src/index.js"
  ],
  // "include": ["./polyfills/**/*.ts"],
  "exclude": ["build", "node_modules"]
}
